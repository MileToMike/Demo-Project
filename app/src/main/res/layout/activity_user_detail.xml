<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="user"
            type="com.zonvoir.demoproject.model.User" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.name}"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.email}"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userPhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.phone}"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userWebsiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.website}"
            android:textSize="18sp" />

<!--        <TextView-->
<!--            android:id="@+id/userAddressTextView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@{user.address.street}"-->
<!--            android:textSize="18sp" />-->


        <TextView
            android:id="@+id/userCompanyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.company.name}"
            android:textSize="18sp" />
    </LinearLayout>
</layout>
